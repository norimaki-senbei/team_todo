extends ../layout

block content 
  h2 タスクの新規作成
  form(action=`/teams/${ teamId }/tasks`, method="post")
    _method post
    _csrf

    - if(err)
      ul.errors
        each error in err.errors
          li= error.message

    div
      label(for="taskTitle") タイトル
      input(name="taskTitle")
    div
      label(for="taskBody") 内容
      textarea(name="taskBody", rows="3")
    div
      label(for="assigneeId") 担当者
      select(name="assigneeId")
        //each user in users
        //  option(value=user.id) #{user.username}

    div
      button(type="submit") 送信
